# Discord Bot Config
DISCORD_TOKEN = "your_discord_bot_token"
DISCORD_CLIENT_ID = "your_client_id"
DISCORD_GUILD_ID = "your_guild_id"
DISCORD_CONTROL_CHANNEL_ID = "channel_for_all_logs_and_controls"

# Minecraft Server Config
MC_HOST = "localhost"
MC_PORT = 25565

# Minecraft Bot Credentials
MC_USERNAME = "bot"
MC_PASSWORD = "botPasswordIfCrackedOrLeaveBlank"
MC_AUTH = "microsoft" # microsoft / offline

# Minecraft Bot Config
MC_LOGIN_COMMAND_DELAY_MS = 3000
STATUS_UPDATE_INTERVAL_MS = 5000
STATUS_MODE = "edit" # edit | send | off
SUPPRESS_PROTOCOL_SPAM = "true"
MC_VERSION = "" # e.g. 1.20.4 (leave blank for auto)

# Optional Features
ENABLE_VIEWER = "false" # set true to enable prismarine viewer
VIEWER_PORT = 3002
ENABLE_WEB_SERVER = "false" # set true to enable express heartbeat
WEB_SERVER_PORT = 3001
